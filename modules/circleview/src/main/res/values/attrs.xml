<resources>
    <!-- Swipe Back Layout -->
    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension" />
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference" />
        <attr name="shadow_right" format="reference" />
        <attr name="shadow_bottom" format="reference" />
    </declare-styleable>

    <!-- CircleIndicator & CircleProgress -->
    <declare-styleable name="CircleView">
        <attr name="circle_divider_width" format="dimension" />

        <attr name="circle_out_indicator_size" format="dimension" />
        <attr name="circle_title_indicator_size" format="dimension" />
        <attr name="circle_content_indicator_size" format="dimension" />
        <attr name="circle_unit_indicator_size" format="dimension" />
        <attr name="circle_alert_indicator_size" format="dimension" />

        <attr name="circle_center_out" format="dimension" />
        <attr name="circle_center_middle" format="dimension" />
        <attr name="circle_center_inside" format="dimension" />

        <attr name="circle_normal_gray" format="color" />

        <attr name="circle_indicator_center" format="color" />
        <attr name="circle_indicator_light" format="color" />
        <attr name="circle_indicator_gray" format="color" />

        <attr name="circle_title" format="color" />
        <attr name="circle_alert" format="color" />
        <attr name="circle_content" format="color" />
        <attr name="circle_unit" format="color" />
    </declare-styleable>
</resources>